@using System.Web.Optimization
@model FeatureBee.Server.Models.FeatureBeeEnvironmentViewModel

@{
    ViewBag.Title = "Feature Bee";
}

@section scripts {
    @Styles.Render("~/Content/boardify")
    @Scripts.Render("~/bundles/board")
    <link href='https://fonts.googleapis.com/css?family=Rock+Salt' rel='stylesheet' type='text/css' />
    <link href='https://fonts.googleapis.com/css?family=Gloria+Hallelujah' rel='stylesheet' type='text/css'>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>
    @Scripts.Render("~/bundles/startup")
}
<div class="page-header" id="banner">
    <div class="row">
        <div class="col-lg-6">
            <h1>FeatureBoard</h1>
        </div>
        <div class="col-lg-6">
            <div class="row" style="margin-top: 42px;">
                <label class="col-lg-2 control-label">Teamfilter:</label>
                <div class="col-lg-10 btn-group">
                    @foreach (var team in Model.Teams)
                    {
                        <a href="#" data-filter-team="@team" class="btn btn-default btn-xs" style="pointer-events:all; cursor: pointer;">@team</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @Html.Partial("~/Views/Feature/BoardTemplate.cshtml")
    </div>
    <div class="row">
        <div class="template">
            @{
                foreach (var condition in new[] { "trafficDistribution", "culture", "browser" })
                {
                    Html.RenderPartial(string.Format("~/Views/Conditions/{0}.cshtml", condition));
                }
            }
        </div>
        @Html.Partial("~/Views/Feature/EditTemplate.cshtml", Model)
    </div>
</div>
